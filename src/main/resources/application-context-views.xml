<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="loginView" class="com.d.passwordmanager.views.LoginView"/>

    <bean id="registerView" class="com.d.passwordmanager.views.RegisterView"/>

    <bean id="indexView" class="com.d.passwordmanager.views.IndexView">
        <property name="indexController" ref="indexController"/>
    </bean>

    <bean id="createPasswordView" class="com.d.passwordmanager.views.CreatePasswordView">
        <property name="createPasswordController" ref="createPasswordController"/>
    </bean>

    <bean id="editPasswordView" class="com.d.passwordmanager.views.EditPasswordView">
        <property name="editPasswordController" ref="editPasswordController"/>
    </bean>

    <bean id="showCreatedPasswordView" class="com.d.passwordmanager.views.ShowCreatedPasswordView">
        <property name="showCreatedPasswordController" ref="showCreatedPasswordController"/>
    </bean>

    <bean id="findPasswordView" class="com.d.passwordmanager.views.FindPasswordView">
        <property name="findPasswordController" ref="findPasswordController"/>
    </bean>
</beans>