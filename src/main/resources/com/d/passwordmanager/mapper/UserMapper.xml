<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.d.passwordmanager.mapper.UserMapper">
    <insert id="insertOne">
        INSERT INTO user (password, email)
        VALUES (#{password}, #{email})
    </insert>
    <update id="updateErrorCount">
        UPDATE user
        SET error_count = #{newErrorCount}
    </update>
    <delete id="deleteAll">
        DELETE FROM user
    </delete>

    <select id="selectIdByPassword" resultType="java.lang.Integer">
        SELECT id
        FROM user
        WHERE password = #{password}
    </select>
    <select id="selectErrorCount" resultType="java.lang.Integer">
        SELECT error_count
        from user
    </select>
    <select id="selectCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM user
    </select>
</mapper>